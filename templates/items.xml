{% extends "channel.xml" %}
{% block items %}
    {% for item in feed.items %}<item>
      <title>{{item.subject}}</title>
      <description><![CDATA[<p>{{item.description}}. </p><p>Темы: {{item.themes|themes_flatten}}. </p><p>{{item.url|urlize}}</p>]]></description>
      <itunes:summary>{{item.description}}</itunes:summary>
      <itunes:subtitle>{{item.description}}</itunes:subtitle>
      <itunes:author>{{item.author.name}}</itunes:author>
      <itunes:image href="{{item.youtube_thumbnail}}"/>
      <enclosure url="http://{{request.host + item.audio_url}}" type="audio/mp4" length="{{item.audio_filesize}}"/>
      <guid>http://{{request.host + item.audio_url}}</guid>
      <link>{{item.url}}</link>
      <itunes:duration>{{item.audio_duration_hms}}</itunes:duration>
      <pubDate>{{item.date_rfc822}}</pubDate>
      {% for theme_id, theme_name in item.themes.iteritems() %}<pncast:theme alias="{{theme_id}}">{{theme_name.decode('utf-8')}}</pncast:theme>
      {% endfor %}</item>
    {% endfor %}
{% endblock %}
