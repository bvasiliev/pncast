{% extends "channel.xml" %}
{% block items %}
    {% for item in feed.items %}<item>
      <title>{{item.subject}}</title>
      <description><![CDATA[{% set author_href = "<a href=\"https://pncast.ru/author/%s/rss.xml\">%s<a/>" % (item.author.id, item.author.name) %}
<div class="descr">{{ item.description|replace(item.author.name, author_href)|safe }}.</div>
<div class="themes"><ul>{% for theme_id, theme_name in item.themes.iteritems() %}<li><a href={{ "https://pncast.ru/theme/%s/rss.xml" % theme_id }}>{{theme_name}}</a></li>{% endfor %}</ul></div>
<div class="src">Подробнее: {{item.url|urlize}}</div>]]>
      </description>
      <itunes:summary>{{item.description}}</itunes:summary>
      <itunes:subtitle>{{item.description}}</itunes:subtitle>
      <itunes:author>{{item.author.name}}</itunes:author>
      <itunes:image href="{{item.youtube_thumbnail}}"/>
      <enclosure url="http://{{request.host + item.audio_url}}" type="audio/mp4" length="{{item.audio_filesize}}"/>
      <guid>http://{{request.host + item.audio_url}}</guid>
      <link>{{item.url}}</link>
      <itunes:duration>{{item.audio_duration_hms}}</itunes:duration>
      <pubDate>{{item.date_rfc822}}</pubDate>
      {% for theme_id, theme_name in item.themes.iteritems() %}<pncast:theme alias="{{theme_id}}">{{theme_name}}</pncast:theme>
      {% endfor %}</item>
    {% endfor %}
{% endblock %}
